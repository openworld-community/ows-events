{
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"red,blue\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:watch",
    "i": "npm i && concurrently -n \"frontend,backend\" -c \"red,blue\" \"cd frontend && npm i\" \"cd backend && npm i\"",
    "prod:build": "cd frontend && npm run build",
    "prod:run": "cd backend && npm run start:watch",
    "demo:build": "cd frontend && npm run build:only"
  },
  "devDependencies": {
    "@types/node-telegram-bot-api": "^0.61.6",
    "@types/uuid": "^9.0.1",
    "concurrently": "^8.0.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "node-telegram-bot-api": "^0.61.0",
    "uuid": "^9.0.0",
    "vue3-markdown-it": "^1.0.10"
  }
}
